ScreenManager:
    Screen:
        name: 'home'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Cornhusker Entertainment Tracker'
                font_size: sp(32)
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Create City'
                    size_hint: (0.5, None)
                    pos_hint: {'center_x': 0.5}
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'create_city'
                Button:
                    text: 'Add/Edit Venue'
                    size_hint: (0.5, None)
                    pos_hint: {'center_x': 0.5}
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'venues'
                Button:
                    text: 'Add Review'
                    size_hint: (0.5, None)
                    pos_hint: {'center_x': 0.5}
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'add_review_page'
            Button:
                text: 'Exit App'
                size_hint: (1, 0.5)
                on_press:
                    app.stop()
    Screen:
        name: 'create_city'
        on_pre_enter:
            city_name.text = ''
            lat.text = ''
            long.text = ''
            ege.text = ''
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Create City'
                font_size: sp(32)
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'City Name'
                        font_size: sp(20)
                    TextInput:
                        id: city_name
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Latitude'
                        font_size: sp(20)
                    TextInput:
                        id: lat
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Longitude'
                        font_size: sp(20)
                    TextInput:
                        id: long
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Encompassing Geographic\nEntity'
                        font_size: sp(20)
                    TextInput:
                        id: ege
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        id: city_creation_message
                        font_size: sp(20)
                    Button:
                        id: ok_button
                        background_color: (1, 1, 1, 0)
                        text: 'OK'
                        font_size: sp(25)
                        disabled: True
                        on_press:
                            root.transition.direction = 'right'
                            root.current = 'home'
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: 'BACK'
                        pos_hint: {'x':.1, 'y':.1}
                        on_press:
                            root.transition.direction = 'right'
                            root.current = 'home'
                    Button:
                        text: 'CREATE CITY'
                        pos_hint: {'x':.1, 'y':.1}
                        on_press:
                            app.add_city(city_name.text, lat.text, long.text, ege.text)
    Screen:
        name: 'ask_add_venue'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'City created successfully!'
                font_size: sp(32)
            Label:
                text: 'Do you want to add a venue to your newly created city?'
                font_size: sp(32)
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'YES'
                    font_size: sp(25)
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'new_venue'
                Widget:
                Button:
                    text: 'NO'
                    font_size: sp(25)
                    on_press:
                        root.transition.direction = 'right'
                        root.current = 'home'
    Screen:
        name: 'venues'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Add/Edit Venues'
                font_size: sp(25)
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Add New Venue'
                    size_hint: (0.5, None)
                    pos_hint: {'center_x': 0.5}
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'new_venue'
                Button:
                    text: 'Edit Existing Venue'
                    size_hint: (0.5, None)
                    pos_hint: {'center_x': 0.5}
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'choose_city_for_venue_edit'
                Button:
                    text: 'BACK'
                    size_hint: (0.5, None)
                    pos_hint: {'center_x': 0.5}
                    on_press:
                        root.transition.direction = 'right'
                        root.current = 'home'
    Screen:
        name: 'new_venue'
        on_pre_enter:
            venue_name.text = ''
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Create New Venue'
                font_size: sp(32)
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Venue Name'
                        font_size: sp(20)
                    TextInput:
                        id: venue_name
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Associated City'
                        font_size: sp(20)
                    Spinner:
                        id: associated_city
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Venue Type'
                        font_size: sp(20)
                    Spinner:
                        id: venue_type
                        values: ('Indoor Restaurant', 'Outdoor Restaurant', 'Indoor Theater', 'Outdoor Theater', 'Indoor Sports Arena', 'Outdoor Sports Arena')
                Label:
                    id: venue_name_error
                    font_size: sp(20)
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: 'BACK'
                        on_press:
                            root.transition.direction = 'right'
                            root.current = 'venues'
                    Button:
                        text: 'NEXT'
                        on_press:
                            app.duplicate_name_venue(venue_name.text, venue_name.text, associated_city.text, 'CREATE')
    Screen:
        name: 'choose_conditions'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Check the box for each condition you'd like to edit."
                font_size: sp(32)
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Temperature'
                    font_size: sp(20)
                CheckBox:
                    id: temperature_cb
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Humidity'
                    font_size: sp(20)
                CheckBox:
                    id: humidity_cb
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Wind'
                    font_size: sp(20)
                CheckBox:
                    id: wind_cb
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'OpenWeather Weather Condition Code'
                    font_size: sp(20)
                CheckBox:
                    id: wcc_cb
            Button:
                text: 'BACK'
                on_press:
                    root.transition.direction = 'right'
                    root.current = 'new_venue'
            Button:
                text: 'NEXT\nOperating Conditions'
                on_press:
                    app.adjust_opacity(temperature_cb.active, humidity_cb.active, wind_cb.active, wcc_cb.active)
                    root.transition.direction = 'left'
                    root.current = 'operating_conditions'
    Screen:
        name: 'operating_conditions'
        on_pre_enter:
            min_temp.text = ''
            max_temp.text = ''
            min_humidity.text = ''
            max_humidity.text = ''
            max_wind_speed.text = ''
            owc.text = ''
            venue_creation_message.text = ''
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Operating Conditions'
                font_size: sp(32)
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    id: temperature_conditions
                    orientation: 'horizontal'
                    Label:
                        text: 'Temperature below'
                    TextInput:
                        id: min_temp
                    Label:
                        text: 'Temperature above'
                    TextInput:
                        id: max_temp
                BoxLayout:
                    id: humidity_conditions
                    orientation: 'horizontal'
                    Label:
                        text: 'Humidity below'
                    TextInput:
                        id: min_humidity
                    Label:
                        text: 'Humidity above'
                    TextInput:
                        id: max_humidity
                BoxLayout:
                    id: wind_conditions
                    orientation: 'horizontal'
                    Label:
                        text: 'Wind speed above'
                    TextInput:
                        id: max_wind_speed
                BoxLayout:
                    id: open_weather_conditions
                    orientation: 'horizontal'
                    Label:
                        text: 'OpenWeather Condition Code'
                    TextInput:
                        id: owc
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        id: venue_condition_error
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'BACK'
                    on_press:
                        root.transition.direction = 'right'
                        root.current = 'choose_conditions'
                Button:
                    text: 'CREATE VENUE'
                    on_press:
                        app.add_venue(venue_name.text, venue_type.text, associated_city.text, min_temp.text, max_temp.text, min_humidity.text, max_humidity.text, max_wind_speed.text, owc.text)
    Screen:
        name: 'venue_creation_success'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Venue created!'
                font_size: sp(32)
            Widget:
            Button:
                text: 'OK'
                on_press:
                    root.transition.direction = 'right'
                    root.current = 'home'
    Screen:
        name: 'choose_city_for_venue_edit'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Choose City To Edit Venues Of'
            Spinner:
                id: venue_edit_city
                values: associated_city.values
            Widget:
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'BACK'
                    on_press:
                        root.transition.direction = 'right'
                        root.current = 'venues'
                Widget:
                Button:
                    text: 'Choose Venue'
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'edit_venue'
                        app.update_venue_list(venue_edit_city.text)
    Screen:
        name: 'edit_venue'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Edit Existing Venue'
                font_size: sp(32)
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    Label:
                        text: 'Venue to edit: '
                        font_size: sp(20)
                    Spinner:
                        id: venue_edit_selection
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'BACK'
                    on_press:
                        root.transition.direction = 'right'
                        root.current = 'choose_city_for_venue_edit'
                Button:
                    text: 'NEXT'
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'edit_venue_data'
    Screen:
        name: 'edit_venue_data'
        on_pre_enter:
            new_venue_name.text = ''
            new_min_t.text = ''
            new_max_t.text = ''
            new_min_h.text = ''
            new_max_h.text = ''
            new_max_w.text = ''
            new_owc.text = ''
            venue_edit_message.text = ''
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: f'Editing {venue_edit_selection.text} Data'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Name: '
                TextInput:
                    id: new_venue_name
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Temperature Range\n(In F)'
                TextInput:
                    id: new_min_t
                Label:
                    text: ' through '
                TextInput:
                    id: new_max_t
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Humidity Range\n(In %)'
                TextInput:
                    id: new_min_h
                Label:
                    text: ' through '
                TextInput:
                    id: new_max_h
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Max Wind Speed\n(In MPH)'
                TextInput:
                    id: new_max_w
                Label:
                    text: 'OpenWeather Condition Code'
                TextInput:
                    id: new_owc
            Label:
                id: venue_edit_message
                font_size: sp(20)
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'BACK'
                    on_press:
                        root.transition.direction = 'right'
                        root.current = 'edit_venue'
                Button:
                    text: 'SAVE'
                    on_press:
                        app.update_venue_data(venue_edit_selection.text, new_venue_name.text, venue_edit_city.text, new_min_t.text, new_max_t.text, new_min_h.text, new_max_h.text, new_max_w.text, new_owc.text)
                        app.update_spinner_names(venue_edit_selection.text, new_venue_name.text)
    Screen:
        name: 'venue_edit_success'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Venue edited successfully!'
                font_size: sp(32)
            Widget:
            Button:
                text: 'OK'
                on_press:
                    root.transition.direction = 'right'
                    root.current = 'home'
    Screen:
        name: 'add_review_page'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Add A New Review'
                font_size: sp(32)
            Label:
                text: 'What city is the venue you are rating in/nearby?'
                font_size: sp(25)
            Spinner:
                id: welp_city
                values: associated_city.values
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'BACK'
                    on_press:
                        root.transition.direction = 'right'
                        root.current = 'home'
                Widget:
                Button:
                    text: 'NEXT'
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'choose_venue_new_review'
                        app.update_venue_list(welp_city.text)
    Screen:
        name: 'choose_venue_new_review'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Add A New Review'
                font_size: sp(32)
            Label:
                text: 'What venue will you be reviewing?'
                font_size: sp(25)
            Spinner:
                id: welp_venue
                values: venue_edit_selection.values
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'BACK'
                    on_press:
                        root.transition.direction = 'right'
                        root.current = 'add_review_page'
                Widget:
                Button:
                    text: 'NEXT'
                    on_press:
                        root.transition.direction = 'left'
                        root.current = 'new_venue_score'
    Screen:
        name: 'new_venue_score'
        on_pre_enter:
            welp_score.text = ''
            invalid_welp_score.text = ''
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: f"Reviewing {welp_venue.text} on Welp"
                font_size: sp(32)
            Label:
                text: f'How many stars would you give {welp_venue.text}?'
                font_size: sp(25)
            TextInput:
                id: welp_score
            Label:
                id: invalid_welp_score
                text: ''
                font_size: sp(20)
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'BACK'
                    on_press:
                        root.transition.direction = 'right'
                        root.current = 'choose_venue_new_review'
                Widget:
                Button:
                    text: 'NEXT'
                    on_press:
                        app.add_welp_score(welp_score.text, welp_city.text, welp_venue.text)
    Screen:
        name: 'review_added_success'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: f'Thank you for reviewing {welp_venue.text} on Welp!'
                font_size: sp(25)
            Button:
                text: 'OK'
                on_press:
                    root.transition.direction = 'right'
                    root.current = 'home'

<Screen>:
    canvas.before:
        Color:
            rgba: (1.0, 1.0, 1.0, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size

<Label>:
    color: (0.0, 0.0, 0.75, 1.0)
    halign: 'center'

<Spinner>:
    text_autoupdate: True

<Button>:
    color: (1, 1, 1, 1)
    font_size: sp(25)
    halign: 'center'

<TextInput>:
    multiline: False
    write_tab: False

<CheckBox>:
    canvas:
        Color:
            rgba: (0.0, 0.0, 0.75, 1.0)
        Rectangle:
            source: f'atlas://data/images/defaulttheme/checkbox{"_radio" if self.group else ""}{"_disabled" if self.disabled else ""}{"_on" if self.active else "_off"}'
            size: sp(32), sp(32)
            pos: int(self.center_x - sp(16)), int(self.center_y - sp(16))

