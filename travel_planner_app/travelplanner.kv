            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    size_hint_max_x: 40
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            id: amount_unvalidated_cities
                            text: ''
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
