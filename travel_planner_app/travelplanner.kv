<Screen>:
    canvas.before:
        Color:
            rgba: (1.0, 1.0, 1.0, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size

<Label>:
    color: (0.0, 0.0, 0.75, 1.0)
    halign: 'center'

<Button>:
    color: (1, 1, 1, 1)
    font_size: sp(25)
    halign: 'center'

<TextInput>:
    multiline: False
    write_tab: False

<CheckBox>:
    canvas:
        Color:
            rgba: (0.0, 0.0, 0.75, 1.0)
        Rectangle:
            source: f'atlas://data/images/defaulttheme/checkbox{"_radio" if self.group else ""}{"_disabled" if self.disabled else ""}{"_on" if self.active else "_off"}'
            size: sp(32), sp(32)
            pos: int(self.center_x - sp(16)), int(self.center_y - sp(16))

<AirportButtons>
    on_press: app.add_airport(self.text)

<CityButtons>
    on_press: app.add_city(self.text)
