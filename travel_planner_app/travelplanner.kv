                                id: create_city_error
                            BoxLayout:
                                size_hint_max_x: 20
                        BoxLayout:
                            size_hint_max_y: 10
                        BoxLayout:
                            Spinner:
                                id: accept_reject_review
                                text: 'Accept or Reject Review'
                                values: ('Accept', 'Reject')
                        BoxLayout:
                            orientation: 'horizontal'
                            Button:
                                text: 'BACK'
                                size_hint: (0.5, 0.5)
                                on_press:
                                    root.current = 'mainmenu1'
                            Button:
                                text: 'UPDATE REVIEWS'
                                size_hint: (0.5, 0.5)
                                on_press:
                                    app.check_state_of_checkboxes()
                                    root.ids.venue_and_review_scroll.clear_widgets()
    Screen:
        name: 'prepare_itinerary'
        on_enter:
            app.prepare_itineraries()
            app.populate_itinerary_view()
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_max_y: 80
                Label:
                    text: 'Prepare Itinerary'
                    font_size: '25sp'
            ScrollView:
                do_scroll_x: True
                do_scroll_y: False
                id: itinerary_scroll
                BoxLayout:
                    orientation: 'vertical'
                    BlackLineX:
                    BoxLayout:
                        id: entertainment_itinerary
                        orientation: 'horizontal'
                        Button:
                            text: 'Create Closest Itinerary'
                            on_press:
                                app.submit_data(app.queued_closest_itineraries)
                                app.delete_row(app.queued_entertainment_itineraries)
                                app.queued_closest_itineraries = []
                                app.queued_entertainment_itineraries = []
                                root.current = 'mainmenu1'
                    BlackLineX:
                    BoxLayout:
                        id: closest_itinerary
                        orientation: 'horizontal'
                        Button:
                            text: 'Create Entertainment Itinerary'
                            on_press:
                                app.submit_data(app.queued_entertainment_itineraries)
                                app.delete_row(app.queued_closest_itineraries)
                                app.queued_closest_itineraries = []
                                app.queued_entertainment_itineraries = []
                                root.current = 'mainmenu1'
                    BlackLineX:
    Screen:
        name: 'loading_screen'
        on_enter: Clock.schedule_once(app.load, 3)
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_max_y: 80
                Label:
                    text: ''
                    font_size: '25sp'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_max_y: 80
                Label:
                    text: ''
                    font_size: '25sp'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_max_y: 80
                Label:
                    text: 'Loading...'
                    font_size: '25sp'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    BoxLayout:
                        size_hint_max_x: 20
                    BoxLayout:
                        orientation: 'vertical'
                        BoxLayout:
                            size_hint_max_y: 10
<Screen>:
    canvas.before:
        Color:
            rgba: (1.0, 1.0, 1.0, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size

<Label>:
    color: (0.0, 0.0, 0.75, 1.0)
    halign: 'center'

<Button>:
    color: (1, 1, 1, 1)
    font_size: sp(25)
    halign: 'center'

<TextInput>:
    multiline: False
    write_tab: False

<CheckBox>:
    canvas:
        Color:
            rgba: (0.0, 0.0, 0.75, 1.0)
        Rectangle:
            source: f'atlas://data/images/defaulttheme/checkbox{"_radio" if self.group else ""}{"_disabled" if self.disabled else ""}{"_on" if self.active else "_off"}'
            size: sp(32), sp(32)
            pos: int(self.center_x - sp(16)), int(self.center_y - sp(16))

<AirportAndCityButtons>
    on_press: app.add_validated_buttons(self.text)

<ValidateLocationsLabel>
    on_press: app.get_places_to_validate(self.text)

<ReviewScrollView>:
    id: view
    do_scroll_x: False
    do_scroll_y: True
    BoxLayout:
        orientation: 'vertical'
        Label:
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                id: rating_label
            BoxLayout:
                orientation: 'vertical'
                id: check_box

<ItineraryView>
    orientation: 'horizontal'
    size_hint_min_x: 300
    BlackLineY:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Date'
        Label:
            text: 'Leave From'
        Label:
            text: 'Arrive At'
        Label:
            text: 'Go to'
        Label:
            text: 'Eat At'
        Label:
            text: 'Watch At'
    BlackLineY:

<BlackLineX>:
    size_hint_max_y: 5
    canvas:
        Color:
            rgba: (0, 0, 0, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size

<BlackLineY>:
    size_hint_max_x: 5
    canvas:
        Color:
            rgba: (0, 0, 0, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size
